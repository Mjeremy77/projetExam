{% extends 'base.html.twig' %}

{% block title %}Reinitialisation Mot De Passe{% endblock %}

{% block body %}
{{ include ("partials/title_section.html.twig",{'name':'Reinitalisation Mot De Passe'}) }}

 <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Reinitialisation Mot De Passe</h3>
                            </div>
                            <div class="content">
                                <div class="message-flash">
                                    {% for flashError in app.flashes('reset_password_error') %}
                                     <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                                    {% endfor %}
                                </div>
                            
                                {{ form_start(requestForm) }}
                                    {{ form_row(requestForm.email) }}
                                    <div>
                                        <small>
                                            Entrez votre email pour envoyer un lien de reinialisation
                                        </small>
                                    </div>

                                    <button class="btn btn-fill-out btn-block">Envoyer Mot De Passe</button>
                                {{ form_end(requestForm) }}
                            </div>
                            <div class="form-note text-center">Avez vous déjà un compte ? <a href="{{ path('app_register')}}">Connexion</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
{% endblock %}
